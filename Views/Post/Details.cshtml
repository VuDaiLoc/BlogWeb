@model BlogShare.Web.Models.Post
@{
    ViewData["Title"] = "Chi tiết bài viết";
}

<h2>@Model.Title</h2>

<p><strong>Chuyên mục:</strong> @Model.Category?.Name</p>
<p><strong>Ngày đăng:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
<p>
    <strong>Trạng thái:</strong>
    @if (Model.IsApproved == true)
    {
        <span class="text-success">Đã duyệt</span>
    }
    else if (Model.IsApproved == false)
    {
        <span class="text-danger">Bị từ chối</span>
    }
    else
    {
        <span class="text-warning">Chờ duyệt</span>
    }

</p>

@if (!string.IsNullOrEmpty(Model.ImagePath))
{
    <img src="@Model.ImagePath" style="max-width: 100%;" class="mb-3" />
}

<p>@Html.Raw(Model.Content)</p>

<a href="@Url.Action("MyPosts", "Post")" class="btn btn-secondary">Quay lại</a>
