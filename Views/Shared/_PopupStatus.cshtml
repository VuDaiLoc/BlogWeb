@{
    var statusMessage = TempData["StatusMessage"] as string;
}

@if (!string.IsNullOrEmpty(statusMessage))
{
    <div id="popupStatus" class="alert alert-info alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" role="alert" style="z-index: 9999; min-width: 300px;">
        @statusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <script>
        setTimeout(() => {
            const popup = document.getElementById("popupStatus");
            if (popup) {
                popup.style.display = "none";
            }
        }, 4000); // tự ẩn sau 4 giây
    </script>
}
